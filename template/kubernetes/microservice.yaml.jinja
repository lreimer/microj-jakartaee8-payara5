apiVersion: v1
kind: Service
metadata:
  name: {{ name }}
spec:
  ports:
    - port: 8080
      name: http
  selector:
    app: {{ name }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}
  labels:
    app: {{ name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ name }}
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
        - name: {{ name }}
          image: {{ name }}
          ports:
            - containerPort: 8080
